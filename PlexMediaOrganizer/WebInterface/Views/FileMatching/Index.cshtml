@model IEnumerable<PendingFile>

<div class="container">
    <h2>File Matching</h2>

    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>File Name</th>
                        <th>Detected Date</th>
                        <th>Status</th>
                        <th>Suggested Match</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in Model)
                    {
                        <tr data-file-id="@file.Id">
                            <td>@Path.GetFileName(file.FilePath)</td>
                            <td>@file.DetectedDate.ToString("g")</td>
                            <td>@file.Status</td>
                            <td>
                                @if (!string.IsNullOrEmpty(file.SuggestedTitle))
                                {
                                    <span>@file.SuggestedTitle (@file.SuggestedYear)</span>
                                }
                            </td>
                            <td>
                                <button class="btn btn-primary btn-sm search-metadata">
                                    Search
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

